{
  "Name": "Orthanc",
  "MetricsEnabled": true,
  "AuthenticationEnabled": false,
  "OrthancExplorerEnabled": true,
  "WebViewer": {
    "AnnotationStorageEnabled": true,
    "StudyDownloadEnabled": true,
    "VideoDisplayEnabled": false,
    "KeyImageCaptureEnabled": true,
    "KeyboardShortcutsEnabled": true,
    "DefaultStudyIslandsDisplayMode": "oneCol"
  },
  "Dicom": {
    "DicomServer": {
      "Enable": true,
      "Address": "0.0.0.0",
      "Port": 4242
    }
  },
  "DicomWeb": {
    "Servers" : {
      "production-dicom-web" : {
        "Url" : "http://localhost:8042/dicom-web/",
        "HttpHeaders": {
          "Authorization" : "Bearer demo"
        }
      }
    },
    "Enable": true,
    "Root": "/dicom-web/",
    "EnableWado": true,
    "WadoRoot": "/wado",
    "Ssl": false,
    "QidoCaseSensitive": true,
    "Host": "localhost:8042",
    "StudiesMetadata" : "Full",
    "StudiesMetadataExtrapolatedTags": ["AcquisitionDate"],
    "SeriesMetadata" : "Full",
    "SeriesMetadataExtrapolatedTags": [
      "BitsAllocated",
      "BitsStored",
      "Columns",
      "HighBit",
      "PhotometricInterpretation",
      "PixelSpacing",
      "PlanarConfiguration",
      "RescaleIntercept",
      "RescaleSlope",
      "Rows",
      "SOPClassUID",
      "SamplesPerPixel",
      "SliceThickness"
    ],
    "EnableMetadataCache": true,
    "MetadataWorkerThreadsCount": 4
  },
  "MySQL" : {
    "EnableIndex" : true,
    "EnableStorage" : true,
    "Host" : "mysql-server",
    "Port" : 3306,
    "UnixSocket" : "/var/run/mysqld/mysqld.sock",
    "Database" : "orthanc",
    "Username" : "orthanc",
    "Password" : "orthanc",
    "EnableSsl" : false,
    "SslVerifyServerCertificates": true,
    "SslCACertificates": "",
    "Lock" : true,
    "MaximumConnectionRetries" : 10,
    "ConnectionRetryInterval" : 5,
    "IndexConnectionsCount" : 1
  },
  "Authorization": {
    "WebService": "http://authorization-server:8080/auth",
    "TokenHttpHeaders": [
      "Authorization"
    ],
    "TokenGetArguments": [
      "Token"
    ],
    "StandardConfigurations": [
      "osimis-web-viewer",
      "stone-webviewer",
      "orthanc-explorer-2",
      "ohif"
    ],
    "UncheckedResources": [
      "/osimis-viewer/config.js",
      "/system",
      "/dicom-web/servers",
      "/dicom-web/info"
    ],
    "UncheckedFolders": [
      "/tools/metrics-prometheus",
      "/plugins",
      "/app/",
      "/wsi/app/",
      "/osimis-viewer/app/",
      "/osimis-viewer/languages/",
      "/dicom-web/app/client/",
      "/dicom-web/app/libs/",
      "/dicom-web/servers/*/qido"
    ],
    "UncheckedLevels": [
      "patient",
      "series",
      "instances"
    ]

  },
  "Plugins": [
    "/usr/share/orthanc/plugins"
  ]
}
